{
  "name": "purescript-messenger-frontend",
  "version": "1.0.0",
  "description": "Frontend part of the Messenger App",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Unisay/purescript-messenger.git"
  },
  "directories": {
    "test": "test"
  },
  "scripts": {
    "postinstall": "spago install",
    "build:purescript": "spago -P build",
    "build:tailwind": "tailwindcss -c tailwind.config.js -i tailwind_inputs.css -o dist/styles/tailwind.css",
    "build": "npm run build:purescript && npm run build:tailwind",
    "bundle:build": "spago -P build --purs-args '--codegen corefn'",
    "bundle:dce": "zephyr -f Main.main",
    "bundle:esbuild": "node build/esbuild-bundle.mjs",
    "bundle": "npm run bundle:build && npm run bundle:dce && npm run bundle:esbuild",
    "dev": "npm run build && npm run dev:serve",
    "dev:serve": "node build/esbuild-dev.mjs",
    "dev:build": "npm run build && npm run serve",
    "watch:purescript": "spago -P build --watch",
    "watch:tailwind": "tailwindcss -c tailwind.config.js -i tailwind_inputs.css -o dist/styles/tailwind.css --watch",
    "prod": "npm run bundle && http-server dist",
    "test": "spago -P test",
    "clean": "rm -rf node_modules output dce-output .spago dist/main.js *.lock .cache"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "xhr2": "^0.2.1"
  },
  "devDependencies": {
    "create-serve": "^1.0.1",
    "esbuild": "^0.14.23",
    "http-server": "^14.1.0",
    "purescript": "^0.14.5",
    "purs-tidy": "^0.7.0",
    "spago": "^0.20.7",
    "tailwindcss": "^3.0.23"
  }
}
